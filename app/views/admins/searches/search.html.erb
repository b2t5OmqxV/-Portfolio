<div class='container'>
	<h1 class='my-4 border-bottom border-secondry'>検索結果</h1>
  <div class='row'>

    <% if @appliance_or_user == "1" %>
    <h2 class='mb-4 border-bottom border-secondry text-center'>家電情報一覧</h2>
      <table class="table table-bordered table-hover text-center">
	      <thead >
		      <tr>
		      	<th>投稿ID</th>
			      <th>家電画像</th>
			      <th>カテゴリ名</th>
			      <th>登録日</th>
			      <th>更新日</th>
			      <th>詳細内容</th>
          </tr>
	      </thead>
	      <tbody>
          <% @appliances.each do |appliance| %>
          <tr>
          	<td><%= appliance.id %></td>
	          <td>
               <%= link_to appliances_path(appliance.id) do %>
               <%= attachment_image_tag(appliance, :image, :fill, 50, 50, fallback: 'none_image.jpg', size:'50x50') %>
               <% end %>
            </td>
            <td><%= appliance.category.category_name %></td>
            <td><%= appliance.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= appliance.updated_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to '詳細',admins_appliance_path(appliance.id), class:'btn btn-outline-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>

    <% else @appliance_or_user == "2" %>
    <h2 class='mb-4 border-bottom border-secondry text-center'>ユーザー検索一覧</h2>
      <table class="table table-bordered table-hover text-center">
	      <thead >
		      <tr>
			      <th>ユーザーID</th>
			      <th>プロフィール画像</th>
			      <th>ユーザーネーム</th>
			      <th>メールアドレス</th>
			      <th>詳細内容</th>
          </tr>
	      </thead>
	      <tbody>
          <% @users.each do |user| %>
          <tr>
          	<td><%= user.id %></td>
	          <td>
　　　　　　　　<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size:'50x50') %>
            </td>
            <td><%= user.user_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to '詳細', admins_user_path(user), class:'btn btn-outline-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>

    <% end %>
  </div>
</div>
  