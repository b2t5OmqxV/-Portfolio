<div class='container'>
	<h1 class='my-4 border-bottom border-secondry'>ユーザー詳細情報</h1>
  <div class='row'>
    <div class='col-10 offset-1'>

      <table class='mt-1 table'>
      	   <thead>
          <tr>
	          <th>ユーザーID</th>
	          <th>プロフィール画像</th>
	          <th>ユーザー名</th>
	          <th>性別</th>
	          <th>自己紹介</th>
	          <th colspan='2'></th >
          </tr>
        </thead>
        <tbody>
        	<tr>
        	  <td><%= @user.id %></td>
            <td><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size:'50x50') %></td>
            <td><%= @user.user_name %></td>
            <td><%= @user.gender %></td>
            <td><%= @user.introduction %></td>
            <td><%= link_to 'ユーザー情報編集', edit_admins_user_path, class:'btn btn-outline-success' %></td>
            <td><%= link_to '削除', admins_user_path, method: :delete, class:'btn btn-outline-danger' %></td>
          </tr>
        </tbody>
      </table>

      <h2 class='my-4 border-bottom border-secondry text-center'>管理家電一覧</h2>
      <table class="table table-bordered table-hover text-center">
	      <thead >
		      <tr>
			      <th>投稿ID</th>
			      <th>家電画像</th>
			      <th>登録日</th>
			      <th>更新日</th>
			      <th>詳細内容</th>
          </tr>
	      </thead>
	      <tbody>
          <% @appliance.each do |appliance| %>
          <tr>
          	<td><%= appliance.id %></td>
	          <td>
               <%= link_to admins_appliances_path(appliance.id) do %>
               <%= attachment_image_tag(appliance, :image, :fill, 50, 50, fallback: 'none_image.jpg', size:'50x50') %>
               <% end %>
            </td>
            <td><%= appliance.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= appliance.updated_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to '詳細',admins_appliance_path(appliance.id), class:'btn btn-outline-primary' %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>

    </div>
  </div>
</div>
 