<h1>ユーザーの詳細</h1>
<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size:'100x100') %>
<%= @user.id %>
<%= @user.user_name %>
<%= @user.gender %>
<%= @user.introduction %>
<%= link_to 'ユーザー情報編集', edit_admins_user_path %>
<%= link_to '削除', admins_user_path, method: :delete %>

<h2>管理家電一覧</h2>
<% @appliance.each do |appliance| %>
<%= appliance.id %>
<%= link_to admins_appliance_path(appliance.id) do %>
<%= attachment_image_tag(appliance, :image, :fill, 50, 50, fallback: 'no_image.jpg', size:'50x50') %>
<% end %>
<%= appliance.created_at %>
<%= appliance.updated_at %>
<%= link_to '詳細', admins_appliance_path(appliance.id) %>
<% end %>