<table class='table table-bordered table-hover'>
	<thead>
		<tr>
			<th style='width: 10%'>ユーザーID</th>
			<th class='text-center' style='width: 15%'>プロフィール画像</th>
			<th style='width: 30%'>ユーザーネーム</th>
			<th style='width: 30%'>メールアドレス</th>
			<th class='text-center' style='width: 15%'>詳細内容</th>
    </tr>
	</thead>
	<tbody>
    <% users.each do |user| %>
    <tr>
      <th class='text-center'><%= user.id %></th>
	    <td class='user_image_td'>
　　　　 <%= attachment_image_tag user, :profile_image, :fill, 50, 50, class:'user_image', fallback: 'no_image.jpg', size:'50x50' %>
      </td>
      <td><%= user.user_name %></td>
      <td><%= user.email %></td>
      <td class='text-center'><%= link_to '詳細', admins_user_path(user), class:'btn btn-outline-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
