<div class='container'>
  <div class='row'>
    <div class='col-8 offset-2'>
    <h1 class='mt-3 border-bottom border-secondry' >カテゴリ登録・一覧</h1>

    <%= form_for(@category_new, url:admins_categories_path) do |f| %>
    <%= render 'layouts/error_messages', obj:@category_new %>
    <%= render 'form', category:@category_new, f:f %>
    <% end %>

    <h2 class='mt-3 border-bottom border-secondry'>カテゴリ一覧</h2>
    <table class='my-5 table'>
      <thead>
        <tr>
          <th>カテゴリ名</th>
	        <th>有効寿命設定月数</th>
	        <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
        	<td><%= category.category_name %></td>
          <td><%= category.effective_life %></td>
          <td><%= link_to '編集',edit_admins_category_path(category.id), class:'btn btn-outline-primary' %></td>
          <td><%= link_to '削除',admins_category_path(category.id), method: :delete, class:'btn btn-outline-danger'  %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
