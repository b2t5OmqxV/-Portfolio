<table class='table table-bordered table-hover text-center' style='table-layout:fixed;'>
	<thead >
		<tr>
		  <th style='width: 15%'>投稿ID</th>
			<th style='width: 15%'>家電画像</th>
			<th style='width: 20%'>カテゴリ名</th>
			<th style='width: 18%'>登録日</th>
			<th style='width: 18%'>更新日</th>
			<th style='width: 14%'>詳細内容</th>
    </tr>
	</thead>
	<tbody>
    <% appliances.each do |appliance| %>
    <tr>
      <th><%= appliance.id %></th>
	    <td>
        <%= attachment_image_tag appliance, :image, :fill, 50, 50, fallback: 'none_image.jpg', size:'50x50' %>
      </td>
      <td><%= appliance.category.category_name %></td>
      <td><%= appliance.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= appliance.updated_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to '詳細',admins_appliance_path(appliance.id), class:'btn btn-outline-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
