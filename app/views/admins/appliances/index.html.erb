<div class='container'>
	<h1 class='my-4 border-bottom border-secondry'>家電情報一覧</h1>
  <div class='row'>

    <div class='col-4'>
      <div class='pt-2 border-bottom border text-center bg-warning'>
        <h4 class='category-title'>カテゴリ</h4>
      </div>
      <div class='mb-5 list-group'>
        <% @categories.each do |category| %>
          <%= link_to ({controller: 'admins/appliances', action: 'index', id: category.id }) do %>
          <div class='list-group-item list-group-item-action text-center'><%= category.category_name %></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class='col-8'>
      <h2 class='mb-4 border-bottom border-secondry text-center'>家電情報一覧</h2>
      <table class='table table-bordered table-hover text-center'>
	      <thead >
		      <tr>
		      	<th>投稿ID</th>
			      <th>家電画像</th>
			      <th>カテゴリ名</th>
			      <th>登録日</th>
			      <th>更新日</th>
			      <th>詳細内容</th>
          </tr>
	      </thead>
	      <tbody>
          <% @appliances.each do |appliance| %>
          <tr>
          	<td><%= appliance.id %></td>
	          <td>
               <%= link_to appliances_path(appliance.id) do %>
               <%= attachment_image_tag appliance, :image, :fill, 50, 50, fallback: 'none_image.jpg', size:'50x50' %>
               <% end %>
            </td>
            <td><%= appliance.category.category_name %></td>
            <td><%= appliance.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= appliance.updated_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to '詳細',admins_appliance_path(appliance.id), class:'btn btn-outline-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>
    </div>

  </div>
</div>
  