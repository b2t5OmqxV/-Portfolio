<table class='my-5 table'>
  <thead>
    <tr>
    <% if admin_signed_in? %>
      <th class='text-center' style='width: 15%'>お知らせID</th>
	    <th class='text-center' style='width: 15%'>通知日</th>
	    <th style='width: 25%'>タイトル</th>
	    <th style='width: 25%'>詳細内容</th>
	    <th style='width: 20%' colspan='1'></th>
    <% else %>
      <th class='text-center' style='width: 15%'>通知日</th>
      <th class='text-center' style='width: 35%'>タイトル</th>
      <th class='text-center' style='width: 40%'>詳細内容</th>
    <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% if admin_signed_in? %>
      <th class='text-center'><%= notice.id %></th>
      <td class='text-center'><%= notice.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= notice.title %></td>
      <td><%= notice.text %></td>
      <td>
        <%= link_to '編集',edit_admins_notice_path(notice.id), class:'mx-1 btn btn-outline-primary' %>
        <%= link_to '削除',admins_notice_path(notice.id), method: :delete, class:'mx-1 btn btn-outline-danger' %>
      </td>
    <% else %>
      <th class='text-center'><%= notices.created_at.strftime('%Y/%m/%d') %></th>
      <td><%= notices.title %></td>
      <td><%= notices.text %></td>
     <% end %>
     </tr>
  </tbody>
</table>
