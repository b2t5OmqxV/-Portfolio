<table class='my-5 table table-hover'>
  <thead>
    <tr>
      <% if admin_signed_in? %>
        <th>お知らせID</th>
	      <th>通知日</th>
	      <th>タイトル</th>
	      <th>詳細内容</th>
	      <th colspan="2"></th>
      <% else %>
        <th>通知日</th>
        <th>タイトル</th>
        <th>詳細内容</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% notices.each do |notice| %>
    <tr>
    <% if admin_signed_in? %>
      <td><%= notice.id %></td>
      <td><%= notice.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= notice.title %></td>
      <td><%= notice.text %></td>
      <td><%= link_to '編集',edit_admins_notice_path(notice.id), class:'btn btn-outline-primary' %></td>
      <td><%= link_to '削除',admins_notice_path(notice.id), method: :delete, class:'btn btn-outline-danger' %></td>
    <% else %>
      <th><%= notice.created_at.strftime('%Y/%m/%d') %></th>
      <th><%= notice.title %></th>
      <th><%= link_to '詳細',notice_path(notice.id), class:'btn btn-outline-primary' %></th>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

