<table class='mb-5 table table-hover notice-table'>
  <thead class='table-success'>
    <tr>
      <% if admin_signed_in? %>
        <th class='text-center' style='width: 11%'>お知らせID</th>
	      <th class='text-center' style='width: 12%'>通知日</th>
	      <th style='width: 20%'>タイトル</th>
	      <th style='width: 20%'>詳細内容</th>
	      <th style='width: 17%' colspan='1'></th>
      <% else %>
        <th class='text-center' style='width: 20%'>通知日</th>
        <th style='width: 60%'>タイトル</th>
        <th class='text-center' style='width: 20%'>詳細内容</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% notices.each do |notice| %>
    <tr>
    <% if admin_signed_in? %>
      <th class='text-center'><%= notice.id %></th>
      <td class='text-center'><%= notice.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= notice.title %></td>
      <td><%= notice.text %></td>
      <td>
        <%= link_to '編集',edit_admins_notice_path(notice.id), class:'mx-1 btn btn-outline-primary' %>
        <%= link_to '削除',admins_notice_path(notice.id), method: :delete, class:'mx-1 btn btn-outline-danger' %>
      </td>
    <% else %>
      <th class='text-center'><%= notice.created_at.strftime('%Y/%m/%d') %></th>
      <td><%= notice.title %></td>
      <td class='text-center'><%= link_to '詳細',notice_path(notice.id), class:'btn btn-outline-primary' %></td>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
