<table class='my-5 table table-hover text-center' style='table-layout:fixed;'>
  <thead>
    <tr>
      <% if admin_signed_in? %>
        <th style='width: 10%'>お知らせID</th>
	      <th style='width: 10%'>通知日</th>
	      <th style='width: 20%'>タイトル</th>
	      <th style='width: 20%'>詳細内容</th>
	      <th style='width: 20%' colspan='1'></th>
      <% else %>
        <th style='width: 20%'>通知日</th>
        <th style='width: 60%'>タイトル</th>
        <th style='width: 20%'>詳細内容</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% notices.each do |notice| %>
    <tr>
    <% if admin_signed_in? %>
      <th><%= notice.id %></th>
      <td><%= notice.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= notice.title %></td>
      <td><%= notice.text %></td>
      <td>
        <%= link_to '編集',edit_admins_notice_path(notice.id), class:'mx-1 btn btn-outline-primary' %>
        <%= link_to '削除',admins_notice_path(notice.id), method: :delete, class:'mx-1 btn btn-outline-danger' %>
      </td>
    <% else %>
      <th><%= notice.created_at.strftime('%Y/%m/%d') %></th>
      <td><%= notice.title %></td>
      <td><%= link_to '詳細',notice_path(notice.id), class:'btn btn-outline-primary' %></td>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

