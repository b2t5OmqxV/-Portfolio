<!DOCTYPE html>
<html>
  <head>
    <title>家電_change_recorder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <haeder>
      <ul>
        <% if admin_signed_in? %>
        <li>
          <span><%= link_to 'お知らせ', admins_notices_path %></span>
        </li>
        <li>
          <span><%= link_to 'ユーザー', admins_users_path %></span>
        </li>
        <li>
          <span><%= link_to '家電', admins_appliances_path %></span>
        </li>
        <li>
          <span><%= link_to 'カテゴリ', admins_categories_path %></span>
        </li>
        <li>
          <span><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></span>
        </li>
          <%= form_tag(admins_searches_path, :method => 'get') do %>
          <div class='input-group' >
          <%= text_field_tag :search %>
          <%= select_tag(:option, options_for_select([['家電製品','1'],['ユーザー','2']])) %>
          <%= submit_tag '検索' , :nil => nil %>
          <% end %>
          </div>
        <% elsif user_signed_in? %>
        <li>
          <span><%= link_to 'マイページ', user_path(current_user.id) %></span>
        </li>
        <li>
          <span><%= link_to 'ユーザー', users_path %></span>
        </li>
        <li>
          <span><%= link_to '家電', appliances_path %></span>
        </li>
        <li>
          <span><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></span>
        </li>
          <%= form_tag(searches_path, :method => 'get') do %>
          <div class='input-group' >
          <%= text_field_tag :search %>
          <%= select_tag(:option, options_for_select([['家電製品','1'],['ユーザー','2']])) %>
          <%= submit_tag '検索' , :nil => nil %>
          <% end %>
        <% elsif request.fullpath != '/admins/sign_in' %>
        <li>
          <span><%= link_to '新規登録', new_user_registration_path %></span>
        </li>
        <li>
          <span><%= link_to 'ログイン', new_user_session_path %></span>
        </li>
        <% else request.fullpath == '/admins/sign_in' %>
        <% end %>
      </ul>
      </haeder>

    <%= yield %>

    <footer>
        <p>© 2020 Portfolio</p>
    </footer>

  </body>
</html>
