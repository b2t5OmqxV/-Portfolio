<div class='container'>
  <div class='row'>
    <div class='col-10 offset-1'>
      <h2 class='my-4 border-bottom border-primary'>パスワードを忘れた方</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-3 mt-2 field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="col-3 my-4 actions">
        <%= f.submit "パスワード再設定メールを送付する", class:'btn btn-info' %>
      </div>

      <% end %>

      <%= link_to '戻る', :back, class:'m-3 btn btn-outline-primary' %>

    </div>
  </div>
</div>
