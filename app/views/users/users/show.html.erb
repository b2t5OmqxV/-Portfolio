<h1>ユーザー詳細情報</h1>
<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:"100x100") %>
<%= @user.id %>
<%= @user.user_name %>
<%= @user.gender %>
<%= @user.introduction %>
<% if @user == current_user %>
<%= link_to 'ユーザー情報編集', edit_user_path %>
<%= link_to 'パスワードを変更する', edit_user_registration_path %>
<% end %>

<h2>管理家電一覧</h2>
<%= @appliances.each do |appliance| %>
<%= link_to (appliances.id) do %>
<%= attachment_image_tag(appliance, :image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50") %>
<% end %>
<%= appliance.category %>
<%= appliance.maker %>
<%= appliance.product %>
<% end %>
