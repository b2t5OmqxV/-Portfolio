<table class='table table-bordered table-hover text-center' style='table-layout:fixed;'>
	<thead >
	<tr>
	  <th style='width: 20%'>ユーザーID</th>
	  <th style='width: 30%'>プロフィール画像</th>
	  <th style='width: 30%'>ユーザーネーム</th>
	  <th style='width: 20%'>詳細内容</th>
  </tr>
	</thead>
	<tbody>
    <% users.each do |user| %>
  <tr>
    <th><%= user.id %></th>
	  <td class='user_image_td'>
　　　 <%= attachment_image_tag user, :profile_image, :fill, 50, 50, class:'user_image', fallback: 'no_image.jpg', size:'50x50' %>
    </td>
    <td><%= user.user_name %></td>
    <td><%= link_to '詳細', user_path(user.id), class:'btn btn-outline-success' %></td>
  </tr>
      <% end %>
  </tbody>
</table>
