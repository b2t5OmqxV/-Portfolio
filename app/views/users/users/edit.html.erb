<%= render 'layouts/error_messages', obj:@user %>

<h1>ユーザー情報編集</h1>

<%= form_for(@user) do |f| %>

<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size:'100x100') %>

<div class='field'>
	<%= f.label :プロフィール画像 %>
	<%= f.attachment_field :profile_image, class: 'user_profile_image' %>
</div>

<div class='field'>
	<%= f.label :ユーザーネーム %>
	<%= f.text_field :user_name, class: 'user_name' %>
</div>

<div class='field'>
  <%= f.label :メールアドレス %>
  <%= f.text_field :email, class: 'email' %>
</div>

<div class='field'>
	<%= f.label :自己紹介 %>
	<%= f.text_area :introduction, class: 'introduction' %>
</div>

<div class='field'>
    <%= f.label :性別 %>
    <%= f.select :gender, ['無回答', '男性', '女性'], class: 'gender' %>
</div>

<div class='actions'>
	  <%= f.submit '編集内容を保存する' %>
</div>

<% end %>


